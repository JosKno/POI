# .htaccess - Configuraci칩n para CopaLink

# Habilitar reescritura de URLs
RewriteEngine On

# Permitir CORS (Cross-Origin Resource Sharing)
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
</IfModule>

# Configuraci칩n de sesiones PHP
php_value session.cookie_lifetime 86400
php_value session.gc_maxlifetime 86400

# Prevenir listado de directorios
Options -Indexes

# Proteger archivos sensibles
<FilesMatch "\.(env|ini|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Configurar p치gina de error personalizada (opcional)
# ErrorDocument 404 /404.html
# ErrorDocument 500 /500.html

# Comprimir archivos para mejor rendimiento
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache para recursos est치ticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>
